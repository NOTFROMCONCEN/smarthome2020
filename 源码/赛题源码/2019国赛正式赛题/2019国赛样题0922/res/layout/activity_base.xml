<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg222"
    tools:context=".BaseActivity" >

    <LinearLayout
        android:id="@+id/line_intent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#50000000"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="30sp"
        android:layout_marginTop="20sp"
        android:background="#50000000"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:text="数据采集："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="温度："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_temp"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="湿度："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_hum"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="烟雾："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_smo"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="燃气："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_gas"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="光照："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_ill"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="气压："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_press"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="Co2："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_co"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="PM2.5："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_pm"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="100sp"
                    android:layout_height="wrap_content"
                    android:text="人体红外："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff" />

                <EditText
                    android:id="@+id/et_per"
                    android:layout_width="200sp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:textColor="#fff" >
                </EditText>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="130sp"
                    android:layout_height="wrap_content"
                    android:text="电器控制："
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#fff"
                    android:textSize="25sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/tg_lamp"
                        android:layout_width="70sp"
                        android:layout_height="90sp"
                        android:background="@drawable/select_lamp"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/tg_cur"
                        android:layout_width="70sp"
                        android:layout_height="90sp"
                        android:background="@drawable/select_cur"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/tg_fan"
                        android:layout_width="70sp"
                        android:layout_height="90sp"
                        android:background="@drawable/select_fan"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/tg_warm"
                        android:layout_width="70sp"
                        android:layout_height="90sp"
                        android:background="@drawable/select_warm"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <ToggleButton
                        android:id="@+id/tg_door"
                        android:layout_width="70sp"
                        android:layout_height="90sp"
                        android:background="@drawable/select_door"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_td_1"
                        android:layout_width="130sp"
                        android:layout_height="50sp"
                        android:background="@drawable/tongdao1open" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_td_2"
                        android:layout_width="130sp"
                        android:layout_height="50sp"
                        android:background="@drawable/tongdao1open" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_td_3"
                        android:layout_width="130sp"
                        android:layout_height="50sp"
                        android:background="@drawable/tongdao1open" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>