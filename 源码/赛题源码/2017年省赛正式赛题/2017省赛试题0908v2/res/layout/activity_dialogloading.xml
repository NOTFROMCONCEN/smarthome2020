<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250sp"
    android:layout_height="250sp"
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/pg_loading"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_loading_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pg_loading"
        android:layout_alignLeft="@+id/pg_loading"
        android:layout_alignRight="@+id/pg_loading"
        android:layout_alignTop="@+id/pg_loading"
        android:gravity="center_vertical|center_horizontal"
        android:text="亲，正在玩命加载哦 " />

</RelativeLayout>